{
	"name": "bibliography-manager",
	"version": "1.0.0",
	"description": "A bibliography and source management plugin for Obsidian",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"bibliography",
		"citations",
		"bibtex",
		"sources",
		"academic"
	],
	"author": "Stefan Danzl",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"@citation-js/core": "^0.7.18",
		"@citation-js/plugin-bibtex": "^0.7.18",
		"@citation-js/plugin-doi": "^0.7.18",
		"@citation-js/plugin-isbn": "^0.4.0",
		"@citation-js/plugin-wikidata": "^0.7.20"
	}
}